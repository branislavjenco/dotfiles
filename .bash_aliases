
# tmux
alias tmux='/usr/local/bin/tmux'

# using nvim instead of vim
alias vim=nvim

# load nvm only when necessary
alias loadnvm='[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"'

# Sesam Key app helper commands
alias app='xfce4-terminal --working-directory=$HOME/Sesam/gpr-app -T "misc" --tab  --working-directory=$HOME/Sesam/gdpr-app  -T "bundle" --tab --working-directory=$HOME/Sesam/gdpr-app -T "build" --tab --working-directory=$HOME/Sesam/gdpr-app  -T "log"'
alias emu='emulator -avd Pixel_XL_API_23'
